<?xml version="1.0"?>
<ruleset name="Custom WordPress Standards">
	<description>WordPress coding standards scoped to plugin source files</description>

	<!-- How to scan -->
	<!-- Usage instructions: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Usage -->
	<!-- Annotated ruleset: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
	<arg value="sp"/>
	<arg name="basepath" value="./"/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="12"/>

	<!-- Use WordPress-Extra ruleset which includes all WordPress rules -->
	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress"/>

	<!-- Exclude the filename sniff (plugin file names may not match class names) -->
	<rule ref="WordPress.Files.FileName">
		<exclude-pattern>*</exclude-pattern>
	</rule>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain">
				<element value="tryaura" />
			</property>
		</properties>
	</rule>

	<!-- Set the minimum PHP/WP versions -->
	<config name="minimum_supported_wp_version" value="5.0"/>
	<config name="testVersion" value="7.4-"/>

	<!-- Target only plugin PHP sources -->
	<file>tryaura.php</file>
	<file>inc</file>
	<file>templates</file>

	<!-- Robust excludes (no anchors) -->
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>
	<exclude-pattern>assets/*</exclude-pattern>
	<exclude-pattern>dependencies/*</exclude-pattern>
	<exclude-pattern>src/*</exclude-pattern>
	<exclude-pattern>lib/*</exclude-pattern>
	<exclude-pattern>dist/*</exclude-pattern>
	<exclude-pattern>build/*</exclude-pattern>
	<exclude-pattern>tests/*</exclude-pattern>
	<exclude-pattern>languages/*</exclude-pattern>
	<exclude-pattern>*.asset.php</exclude-pattern>
	<exclude-pattern>*.twig</exclude-pattern>
	<exclude-pattern>*.css</exclude-pattern>
	<exclude-pattern>*.scss</exclude-pattern>
</ruleset>
